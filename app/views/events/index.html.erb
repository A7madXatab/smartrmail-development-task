<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Begins at</th>
    <th>Ends at</th>
    <th>description</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.name %></td>
      <td><%= event.begins_at.strftime("%F") %></td>
      <td><%= event.ends_at.strftime("%F") %></td>
      <td><%= event.description %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<div class="w-full flex flex-wrap">
  <% 4.downto 0 do %>

    <% Date::DAYNAMES.each do |day| %>
      <div class="w-1/6 border border-gray-500 text-center px-4">
        <h1><%= day %></h1>
        <div class="flex justify-center w-full text-gray-700">
          <h1><%= day.to_date.mday.ordinalize %></h1>
          <h1 class="mx-1"><%= Date::MONTHNAMES[day.to_date.month] %></h1>
        </div>
      </div>
    <% end %>

  <% end %>

</div>



<%= link_to 'New Event', new_event_path %>
